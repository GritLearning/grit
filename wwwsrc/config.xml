<?xml version='1.0' encoding='utf-8'?>
<widget id="com.gritlearning.grit2" version="GRIT_VERSION_PLACEHOLDER" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Grit</name>
    <description>
        Grit is a android tablet based learning platform that is targeted as a complementary way of learning for kids that already attend school.
    </description>
    <author email="somebody@grit" href="http://github.com/gritlearning/grit">
      Grit Learning Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <preference name="fullscreen" value="true" />
    <preference name="webviewbounce" value="true" />
    <preference name="Orientation" value="landscape" />
    <preference name="DisallowOverscroll" value="true"/>
</widget>
