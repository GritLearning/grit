<?xml version="1.0" encoding="UTF-8"?>
<plugin id="com.gritlearning.gritlauncher" version="0.1.0" xmlns="http://apache.org/cordova/ns/plugins/1.0">
    <name>Grit App Launcher</name>
    <description>Grit App launcher plugin for Android</description>
    <license></license>
    <keywords></keywords>
    <repo></repo>
    
    <!-- android -->
    <platform name="android">
        <config-file target="res/xml/config.xml" parent="/*">
            <feature name="GritLauncher">
                <param name="android-package" value="com.gritlearning.gritlauncher.GritLauncher" />
            </feature>
        </config-file>
        <source-file src="src/android/GritLauncher.java" target-dir="src/com/gritlearning/gritlauncher" />
    </platform>
</plugin>
